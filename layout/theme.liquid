<html>
<head>
    {{ content_for_header }}
    <title>{{ shop.name }} - {{ page_title }}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    {% if shop.description != blank and template == "index" %}
    <meta name="description" content="{{ shop.description }}">
    {% endif %}
    {{ 'style.min.css' | asset_url | stylesheet_tag }}
    {% if template == 'product' %}
    {{ 'jquery.fancybox.css' | asset_url | stylesheet_tag }}
    {% endif %}
    <script type="text/javascript" src="//use.typekit.com/tds2rqc.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <link rel="stylesheet" href="//unpkg.com/tachyons@4.6.1/css/tachyons.min.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
    {{ 'option_selection.js' | shopify_asset_url | script_tag }}
</head>

<body class="cf {{ template | replace: '.', ' ' | truncatewords: 1, '' }} dark-gray" id="{{ page_title | handle }}">
  <div class="ml7-ns ph4-ns">
      <header role="banner" class="fixed-ns vh-100-ns w-100 w5-ns bg-near-white dark-gray top-0 left-0 flex content-center justify-center flex-column border-box pa4 pb0 pb4-ns">
        <div class="items-start flex-auto">
            <h1 class="ma0">
                <a href="{{ shop.url }}">
                    <img src="{{ 'dobookco.svg' | asset_url }}" alt="{{ shop.name }}" class="w4" />
                </a>
            </h1>
            <nav role="navigation" class="lh-copy mt5 left-align-with-logo">
              <ul class="list pa0">
                {% for link in linklists.main-menu.links %}
                <li class="f4 mb2">
                  <a href="{{ link.url }}" class="dbc-orange link dim{% if link.active %}near-black{% endif %}">{{ link.title }}</a>
                </li>
                {% endfor %}
              </ul>
            </nav>
        </div>
        <div id="minicartwrap">
        {% include 'minicart' %}
        </div>
    </header>
  <section class="container cf" role="main" id="content">
      {{ content_for_layout }}
  </section><!-- role="main" -->
  <footer role="content-info" class="mt5 mb4">
    <!-- <ul class="wrapper social">
      <li class="twitter"><a href="http://twitter.com/dobookco">Twitter</a></li>
      <li class="facebook"><a href="https://www.facebook.com/DoBookCo">Facebook</a></li>
      <li class="instagram"><a href="http://instagram.com/dobookco/">Instagram</a></li>
      <li class="pinterest"><a href="http://www.pinterest.com/dobookco/">Pinterest</a></li>
    </ul> -->
    <p class="tc f6">
        {% for link in linklists.footer.links %}
          <span class="mh2"><a class="link dbc-orange " href="{{ link.url }}">{{ link.title }}</a></span>
        {% endfor %}
    </p>
    <p class="tc f6">
        Site&nbsp;by&nbsp;<a class="link dbc-orange" href="http://jonheslop.com">Jon&nbsp;Heslop</a>&nbsp; | Powered&nbsp;by&nbsp;<a class="link dbc-orange" href="http://shopify.com">Shopify</a></p>
  </footer>
    <script src="//unpkg.com/jquery@3.1.1"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
    {{ 'app.js' | asset_url | script_tag }}
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fancybox/3.0.47/jquery.fancybox.min.js"></script>
    <script type="text/javascript">
