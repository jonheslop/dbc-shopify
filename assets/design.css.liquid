nav[role="navigation"] .inactive:after {
  content: attr(data-tooltip);
  position: absolute;
  bottom: 130%;
  left: 20%;
  background: #8f8f8f;
  padding: 4px 8px 0;
  color: #2e3133;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  white-space: nowrap;
  opacity: 0;
  font-style: italic;
  font-size: 0.8125em;
  /* At time of this creation, only Fx4 doing pseduo transitions */
  -webkit-transition: all 0.4s ease;
  -moz-transition: all 0.4s ease;
}
nav[role="navigation"] .inactive:before {
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-top: 20px solid #8f8f8f;
  border-left: 20px solid transparent;
  border-right: 20px solid transparent;
  /* At time of this creation, only Fx4 doing pseduo transitions */
  -webkit-transition: all 0.4s ease;
  -moz-transition: all 0.4s ease;
  opacity: 0;
  left: 30%;
  bottom: 90%;
}
nav[role="navigation"] .inactive:hover:after {
  bottom: 100%;
}
nav[role="navigation"] .inactive:hover:before {
  bottom: 70%;
}
nav[role="navigation"] .inactive:hover:after,
nav[role="navigation"] .inactive:hover:before {
  opacity: 1;
}

