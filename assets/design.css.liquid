nav[role="navigation"] ul {
  padding: 0; }
nav[role="navigation"] li {
  font-size: 1.25em; }
nav[role="navigation"] a:link, nav[role="navigation"] a:visited {
  color: #ee5830;
  padding: 0 0.25em;
  -webkit-transition: color 0.3s ease-out;
  -moz-transition: color 0.3s ease-out;
  -o-transition: color 0.3s ease-out;
  -ms-transition: color 0.3s ease-out;
  transition: color 0.3s ease-out; }
nav[role="navigation"] a.inactive:link {
  position: relative; }
nav[role="navigation"] a:hover {
  color: #d93c12;
  text-shadow: 0 0 4px rgba(255, 255, 255, 0.3); }
nav[role="navigation"] .inactive:after {
  content: attr(data-tooltip);
  position: absolute;
  bottom: 130%;
  left: 20%;
  background: #8f8f8f;
  padding: 4px 8px 0;
  color: #2e3133;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  white-space: nowrap;
  opacity: 0;
  font-style: italic;
  font-size: .8125em;
  /* At time of this creation, only Fx4 doing pseduo transitions */
  -webkit-transition: all 0.4s ease;
  -moz-transition: all 0.4s ease; }
nav[role="navigation"] .inactive:before {
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-top: 20px solid #8f8f8f;
  border-left: 20px solid transparent;
  border-right: 20px solid transparent;
  /* At time of this creation, only Fx4 doing pseduo transitions */
  -webkit-transition: all 0.4s ease;
  -moz-transition: all 0.4s ease;
  opacity: 0;
  left: 30%;
  bottom: 90%; }
nav[role="navigation"] .inactive:hover:after {
  bottom: 100%; }
nav[role="navigation"] .inactive:hover:before {
  bottom: 70%; }
nav[role="navigation"] .inactive:hover:after, nav[role="navigation"] .inactive:hover:before {
  opacity: 1; }

