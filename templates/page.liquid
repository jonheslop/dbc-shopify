	<section id="{{page.handle}}" class="partition">
		<header class="bb bw1 b--dbc-orange mb3 mh3 mh0-ns">
        <h1 class="f3 f2-ns ma0 lh-title">{{page.title}}</h1>
    </header>
		<div class="page-content ph3 ph0-ns">
			{% if page.handle == "subscribe" %}
			<form action="http://dobook.us1.list-manage.com/subscribe/post?u=c168767534dca14d175477829&amp;id=ab276620f8" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate wrapper" target="_blank" novalidate>
				<label for="mce-EMAIL">Sign up for news about our books</label>
				<input type="mce-EMAIL" id="mce-EMAIL" name="EMAIL" placeholder="user@email.com" value="" required>
				<input type="submit" id="mc-embedded-subscribe" class="submit" value="Sign Up" />
			</form>
			{% elsif page.handle == "test" %}
				<ul id="newBooks" class="partition cf">
					<header class="cf">
						<hgroup class="wrapper">
							<h1 class="section_title">Books that make it easier to&nbsp;Do&nbsp;stuff</h1>
						</hgroup>
					</header>
				{% if collections.home-page %}
				  {% for product in collections.guidebooks.products %}
					<li class="bookPreview wrapper {{ product.metafields.attribute.type | handleize }}">
						<a href="{{ product.url | within: collection }}" title="{{ product.title }}">
							<figure class="cf">
								<img src="{{ product.featured_image | product_img_url: 'large' }}" alt="{{ image.alt | escape }}" data-at2x="{{ product.featured_image | product_img_url: 'grande' }}">
								<span class="button">Learn more</span>
							</figure>
						</a>
					</li>
				  {% endfor %}
				 {% endif %}
					<!-- <p class="coming_soon wrapper"><em>~ Available from 16th May 2013 ~</em></p> -->
					{% if collections.bundles %}
					  {% for product in collections.bundles.products %}
						<form class="launch addtocart cf" action="/cart/add" method="post">
					      {% comment %} Return to product instead of going to cart {% endcomment %}
					      <input type="hidden" name="return_to" value="back" />
							<header>
								<h2>Summer reading promo: 15% off when you buy the complete set</h2>
							</header>
							<div class="radioButtons cf">
								{% for variant in product.variants %}
					          {% if variant.available == true %}
								<div class="wrapper">
								<input type="radio" name="id" id="format_{{variant.id}}" value="{{ variant.id }}" class="bookFormat"/>
								<label for="format_{{variant.id}}" class="button{% if forloop.first %} first{% endif %}">Add {{ variant.title }} {{ variant.price | money | remove: '.00' }} <span class="description">{% if variant.title == "Bundle" %}Paperback &amp;&nbsp;eBook {% elsif variant.title == "Paperback" %}{{ product.metafields.attribute.pagecount }} pages{% elsif variant.title == "eBook" %}Kindle, iBooks, Readmill etc.{% endif %}</span></label>
								{% if variant.title == "eBook" %}<h5 class="helperText"><a href="/pages/supported-ebook-formats">Supported Ebook&nbsp;formats?</a></h5>{% endif %}
					          	</div>
								{% else %}
								<div class="wrapper">
								<input disabled type="radio" name="id" id="format_{{variant.id}}" value="{{ variant.id }}" class="bookFormat" />
								<label for="format_{{variant.id}}" class="button{% if forloop.first %} first{% endif %}">Add {{ variant.title }} {{ variant.price | money | remove: '.00' }} <span class="description">{% if variant.title == "Bundle" %}Paperback &amp;&nbsp;eBook {% elsif variant.title == "Paperback" %}{{ product.metafields.attribute.pagecount }} pages{% elsif variant.title == "eBook" %}Kindle, iBooks, Readmill etc.{% endif %}</span></label>
								{% if variant.title == "eBook" %}<h5 class="helperText"><a href="/pages/supported-ebook-formats">Supported Ebook&nbsp;formats?</a></h5>{% endif %}
								</div>
					          {% endif %}
					         {% endfor %}
							</div>
						   {% unless product.available %}
							<p class="coming_soon wrapper"><em>~ Available from 16th May 2013 ~</em></p>
						   {% endunless %}
							<div>
								<input type="submit" class="submit button" value="Add to Basket" id="add" name="add" />
							</div>
						</form>
				</ul>
				  {% endfor %}
				 {% endif %}

			<section id="recently" class="partition cf">
				<header class="wrapper">
					<h2 class="section_title">Recently on the&nbsp;blog</h2>
				</header>
				<ul class="cf">
					{% for article in blogs.news.articles limit:1 %}
					<li class="cf">
						<article>
							<figure class="wrapper">
								<a href="{{ article.url }}">
								{% if article.excerpt != blank %}
						        	{{ article.excerpt }}
								{% else %}
									{% capture article_img %}{{ article.content | truncatewords: 3 }}{% endcapture %}
									{% if article_img contains "img" %}
										{% include article_img %}
									{% endif %}
								{% endif %}
								</a>
							</figure>
							<div class="words wrapper">
								<header>
									<h1 class="blog-title"><a href="{{article.url}}">{{ article.title }}</a></h1>
								</header>
								<!-- Displays the body of the article-->
								<div class="article-body cf">
						        	{{ article.content | strip_html | truncatewords: 48 }}
									<p><a href="{{article.url}}" title="Continue reading {{ article.title }}">Continue reading &raquo;</a></p>
						      	</div>
							</div>
						</article>
					</li>
				    {% endfor %}
				</ul>
			</section>
			<aside id="miniAbout" class="partition cf">
				<header class="wrapper">
					<h2 class="section_title">Who we&nbsp;are</h2>
				</header>
				<figure class="wrapper">
					<img src="http://cdn.shopify.com/s/files/1/0176/9202/files/559205_449980518392636_1109027229_n_grande.jpg" />
				</figure>
				<div class="wrapper words">
					<header>
						<h1>The Do Book&nbsp;Company</h1>
					</header>
					<p>The Do Book Company is an independent publishing house based in Shoreditch, London. We publish a series of inspirational pocket guidebooks in print and digital&nbsp;formats.</p>
					<p>You can find us on <a href="http://twitter.com/dobookco">Twitter</a>, <a href="https://www.instagram.com/dobookco">Instagram</a>, <a href="https://www.facebook.com/DoBookCo">Facebook</a>, or you can <a href="/pages/subscribe">subscribe to our&nbsp;newsletter</a>.</p>
					<p><a href="/pages/about-us">Learn more about us&nbsp;&raquo;</a></p>
				</div>
			</aside>
			{% else %}
			{{page.content}}
			{% endif %}
		</div>
	</section>
